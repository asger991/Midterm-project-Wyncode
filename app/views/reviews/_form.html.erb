<%= form_with(model: review, local: true) do |form| %>
<% if review.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(review.errors.count, "error") %>
      prohibited this review from being saved:</h2>

    <ul>
      <% review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="form-group">
  <%= form.text_area :description, id: :review_description, placeholder: 'Your Review Here', class: 'form-control' %>
</div>

<div class="form-group">
  <%= form.text_field :author, id: :review_author, placeholder: 'Your Name', class: 'form-control' %>
</div>

<div class="form-group">
  <%= form.label :rating %>
  <%= form.select :rating, Picture::RATING_VALS, class: 'custom-select' %>
</div>

<% if @picture.nil? %>
  <div class="form-group">
    <%= form.label :picture_id %>
    <%= form.text_field :picture_id, id: :review_picture_id, class: 'form-control' %>
  </div>

<% else %>
  <%= form.hidden_field :picture_id, value:@picture.id %>
<% end %>

<div class="form-group actions">
  <%= form.submit class: 'btn btn-secondary' %>
</div>
<% end %>
