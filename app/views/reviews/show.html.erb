

<div class="container">
  <div class="row">
    <div class="col-6">
      <p id="notice"><%= notice %></p>
      <%= image_tag @review.picture.url, class: 'img-fluid' %>
    </div>
    <div class="col-6">
        <div class="row">
          <div class="col-12">
            <%= @review.description %>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <strong>Author:</strong>
            <%= @review.author %>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
              <strong>Rating:</strong>
              <%= @review.rating %>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <%= link_to 'Edit', edit_review_path(@review) %> |
            <%= link_to 'Back', @review.picture %>
          </div>
        </div>
    </div>
  </div>
</div>
